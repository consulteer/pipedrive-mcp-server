{
  "name": "pipedrive-mcp-server",
  "version": "1.2.3",
  "description": "Model Context Protocol server for Pipedrive API integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "node --import tsx src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t pipedrive-mcp-server .",
    "docker:build:multi": "docker buildx build --platform linux/amd64,linux/arm64 -t pipedrive-mcp-server .",
    "docker:run": "docker run -it --env-file .env pipedrive-mcp-server",
    "docker:run:sse": "docker run -d -p 3000:3000 --env-file .env -e MCP_TRANSPORT=sse pipedrive-mcp-server",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0",
    "@ngrok/ngrok": "^1.5.2",
    "bottleneck": "^2.19.5",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.2",
    "pipedrive": "^30.3.2",
    "ts-node": "^10.9.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.39.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/consulteer/pipedrive-mcp-server.git"
  },
  "keywords": [
    "pipedrive",
    "mcp",
    "model-context-protocol",
    "api",
    "crm"
  ],
  "author": {
    "name": "Jo√£o Miguel Tabosa Vaz Marques Silva",
    "email": "joao@miguel.ms"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/consulteer/pipedrive-mcp-server/issues"
  },
  "homepage": "https://github.com/consulteer/pipedrive-mcp-server#readme"
}